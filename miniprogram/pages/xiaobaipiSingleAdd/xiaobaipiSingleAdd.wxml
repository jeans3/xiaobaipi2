<!--miniprogram/pages/singleAdd/singleAdd.wxml-->
<view class="section">

</view>


<view class="table">
  <view class="tr">
    <view class="tddate">
      <picker mode="date" value="{{date}}" bindchange="bindDateChange">
        <view class="picker">
          日期: {{date}}
        </view>
      </picker>
    </view>
    <view class="tddate">
      <picker mode="selector" value="{{changciIndex}}" range="{{changci}}" bindchange="bindPickerChange">
        <view class="picker">
          场次：第{{changci[changciIndex]}}场
        </view>
      </picker>
    </view>
  </view>

  <view class="tr">

    <view class="td">
      <picker mode="selector" bindchange="bindPickerPlay1" value="{{userList[play1_id]}}" range="{{userList}}"
        range-key="{{'nickName'}}">
        <view class="picker">
          <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" class="userinfo-avatar"
            style="background-image: url({{userList[play1_id].avatarUrl}})" size="default">
          </button>
          {{userList[play1_id].nickName}}
        </view>
      </picker>
    </view>

    <view class="td">
      <picker mode="selector" bindchange="bindPickerPlay2" value="{{userList[play2_id]}}" range="{{userList}}"
        range-key="{{'nickName'}}">
        <view class="picker">
          <button class="userinfo-avatar" style="background-image: url({{userList[play2_id].avatarUrl}})"
            size="default">
          </button>
          {{userList[play2_id].nickName}}
        </view>
      </picker>
    </view>

    <view class="td">
      <picker mode="selector" bindchange="bindPickerPlay3" value="{{userList[play3_id]}}" range="{{userList}}"
        range-key="{{'nickName'}}">
        <view class="picker">
          <button class="userinfo-avatar" style="background-image: url({{userList[play3_id].avatarUrl}})"
            size="default">
          </button>
          {{userList[play3_id].nickName}}
        </view>
      </picker>
    </view>

    <view class="td">
      <picker mode="selector" bindchange="bindPickerPlay4" value="{{userList[play4_id]}}" range="{{userList}}"
        range-key="{{'nickName'}}">
        <view class="picker">
          <button class="userinfo-avatar" style="background-image: url({{userList[play4_id].avatarUrl}})"
            size="default">
          </button>
          {{userList[play4_id].nickName}}
        </view>
      </picker>
    </view>

    <view class="td">
      <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" class="userinfo-avatar"
        style="background-image: url({{shuiavatarUrl}})" size="default">
      </button>
      水
    </view>

  </view>
  <view class="tr">
    <view class="td1"><input confirm-type="next" placeholder="片数" value="{{play1_score}}"
        bindinput="bindKeyInputPlay1" />
    </view>

    <view class="td1"><input confirm-type="next" placeholder="片数" value="{{play2_score}}"
        bindinput="bindKeyInputPlay2" />
    </view>

    <view class="td1"><input confirm-type="next" placeholder="片数" value="{{play3_score}}"
        bindinput="bindKeyInputPlay3" />
    </view>

    <view class="td1"><input confirm-type="next" placeholder="片数" value="{{play4_score}}"
        bindinput="bindKeyInputPlay4" />
    </view>

    <view class="td1"><input confirm-type="next" placeholder="片数" value="{{shui}}" bindinput="bindKeyInputshui" />
    </view>
  </view>
</view>

<view>
  <button class="button" type="primary" plain="true" bindtap='onInsert'>新增记录</button>
</view>

<view>
  <button class="button" type="primary" plain="true" bindtap='insertBattleList'>锁定对阵</button>
</view>

<view class="table">
  <view class="tr">
    <view class="tdlist">{{play1Sum}}</view>
    <view class="tdlist">{{play2Sum}}</view>
    <view class="tdlist ">{{play3Sum}}</view>
    <view class="tdlist">{{play4Sum}}</view>
    <view class="tdlist">{{shuiSum}}</view>
    <!-- <view class="td" bindtap="upload">上传</view> -->
  </view>
</view>

<scroll-view scroll-y="true" style="height:250px" class="scroll-header">
  <view class="table">
    <block wx:for="{{list}}" wx:if="{{list!=null}}">
      <view class="tr">
        <view class="tdlist">{{item.play1_score}}</view>
        <view class="tdlist">{{item.play2_score}}</view>
        <view class="tdlist">{{item.play3_score}}</view>
        <view class="tdlist">{{item.play4_score}}</view>
        <view class="tdlist">{{item.shui}}</view>
      </view>
    </block>
  </view>
</scroll-view>



<view>
  <button class="button" type="primary" plain="true" bindtap='onQuery'>刷新</button>
</view>